{
  "name": "database",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev", // Runs Next.js in development mode
    "build": "next build", // Builds the production version of the app
    "start": "next start", // Starts the Next.js production server
    "lint": "next lint", // Runs the Next.js linter
    "format": "prettier --write .", // Formats the code using Prettier
    "test": "jest" // Optional: Run tests with Jest (if configured)
  },
  "dependencies": {
    "cloudinary": "^1.25.0", // Cloudinary SDK for uploading images
    "next": "13.1.0", // Next.js
    "react": "18.2.0", // React library
    "react-dom": "18.2.0", // React DOM package for rendering UI
    "react-hook-form": "^7.33.1", // For managing forms (optional)
    "uuid": "^9.0.0" // For generating unique IDs (optional)
  },
  "devDependencies": {
    "@types/node": "^18.11.7", // TypeScript types for Node.js
    "@types/react": "^18.0.9", // TypeScript types for React
    "typescript": "^4.5.5", // TypeScript compiler
    "eslint": "^8.10.0", // Linting tool for JavaScript and TypeScript
    "prettier": "^2.4.1", // Code formatter
    "jest": "^27.0.6" // Test runner (optional)
  },
  "eslintConfig": {
    "extends": ["next/core-web-vitals"] // Default ESLint configuration for Next.js
  },
  "prettier": {
    "singleQuote": true, // Use single quotes for strings
    "trailingComma": "all", // Add trailing commas wherever possible
    "semi": true // Add semicolons at the end of statements
  }
}
